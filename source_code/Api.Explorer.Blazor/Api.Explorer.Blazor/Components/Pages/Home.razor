@page "/"

<PageTitle>Home</PageTitle>

<MudContainer Class="pa-4">
    <MudGrid Justify="Justify.FlexStart">
        <MudItem xs="12">
            <MudPaper Elevation="1" Class="pa-4" Square="false">
                <MudText Typo="Typo.h6" GutterBottom="true">Welcome to the Blazor Showcase</MudText>
                <MudText>This application is a practical demonstration developed using Blazor and .NET 8. It serves as a showcase of the capabilities provided by these modern web development technologies.</MudText>
                <MudText Color="Color.Primary">
                    @(OperatingSystem.IsBrowser() ? "Running on WebAssembly" : "Running on Server")
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
