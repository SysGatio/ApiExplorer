@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme01" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Class="appbar" Elevation="1">
        <MudText Class="ml-3"
                 Typo="Typo.subtitle1">
            API Explorer
        </MudText>
        <MudSpacer/>
        <MudIconButton Color="Color.Inherit"
                       Edge="Edge.End"
                       Icon="@Icons.Material.Filled.MoreVert"/>
    </MudAppBar>

    <MudDrawer ClipMode="DrawerClipMode.Always"
               Elevation="2"
               Open="true"
               Style="@($"background-color: {_theme01.Palette.DrawerBackground}")">
        <NavMenu />   
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>
